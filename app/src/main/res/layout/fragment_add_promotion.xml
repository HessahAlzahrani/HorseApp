<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addPromotion.uiLayer.AddPromotionFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView7"
        android:layout_width="412dp"
        android:layout_height="107dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="30dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/promotion_textView1_id"
            android:layout_width="376dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:text="@string/add_promotion"
            android:textAlignment="center"
            android:textColor="#1A2C16"
            android:textColorHint="@color/gray"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>


    <Button
        android:id="@+id/add_button_addFragment_id"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="20dp"
        android:text="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_add_photo_G_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/icon_open_camera_id" />

    <ImageView
        android:id="@+id/icon_add_photo_G_id"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/ic_baseline_add_box_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="#3B5336" />

    <ImageView
        android:id="@+id/icon_open_camera_id"
        android:layout_width="44dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_camera_alt_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="#3B5336" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextHorsesName_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="295dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:helperText="Name_horses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView7"
        tools:ignore="MissingConstraints">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextContent_addEditt_UserProfile_ID_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />


    </com.google.android.material.textfield.TextInputLayout>


    <ImageSwitcher
        android:id="@+id/ImageSwitcher_in_addFragment_id"
        android:layout_width="356dp"
        android:layout_height="194dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/elegant_horse_logo_icons_greenwaht"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

    </ImageSwitcher>

    <ImageView
        android:id="@+id/icon_NXET_id"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="144dp"
        android:src="@drawable/ic_baseline_navigate_next_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageSwitcher_in_addFragment_id" />

    <ImageView
        android:id="@+id/icon_Previous_id"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_navigate_before_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ImageSwitcher_in_addFragment_id" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="368dp"
        android:layout_height="103dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHorsesName_ID">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editTextContact_ID"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="358dp"
                android:layout_height="99dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/content"
                android:inputType="textPersonName"
                android:text="اضف التفاصيل ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextContact_ID_text"
                    android:layout_width="344dp"
                    android:layout_height="match_parent"

                    />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>