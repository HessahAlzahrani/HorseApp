<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detals_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F4E5"
    tools:context=".detailsPromotion.DetailsPromotionFragment">

    <TextView
        android:id="@+id/textView_content_detals_id"
        android:layout_width="314dp"
        android:layout_height="75dp"
        android:layout_marginStart="52dp"
        android:text="detals horses and description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_horse_details_fragment_id" />

    <ImageView
        android:id="@+id/image_profile_in_details_id"
        android:layout_width="114dp"
        android:layout_height="101dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="44dp"
        android:src="@drawable/img_20220104_215544"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_profile_in_details_id"
        android:layout_width="157dp"
        android:layout_height="24dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:text="name user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_horse_details_fragment_id"
        android:layout_width="305dp"
        android:layout_height="192dp"
        android:layout_marginBottom="268dp"
        android:src="@drawable/horse_herd_fog_nature_52500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_details_name_horses_id"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="44dp"
        android:text="nameHorses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_in_details_id" />
</androidx.constraintlayout.widget.ConstraintLayout>

