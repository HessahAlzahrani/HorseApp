<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAndEditProfileUserFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextContent_addEditt_UserProfile_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Content"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_UserName_addEditUserProfile_ID"
        app:layout_constraintStart_toStartOf="@+id/editText_UserName_addEditUserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editText_UserName_addEditUserProfile_ID">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextContent_addEditt_UserProfile_ID_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText_UserName_addEditUserProfile_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="@string/your_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_UsirProfile_inAddEdit_ID">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_UserName_addEditUserProfile_ID_text"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editTextContact_addEditt_UserProfile_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Contact"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editText_City_addEditt_UserProfile_ID"
        app:layout_constraintStart_toStartOf="@+id/editText_City_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editText_City_addEditt_UserProfile_ID">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextContact_addEditt_UserProfile_ID_text"

            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText_City_addEditt_UserProfile_ID"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"

        android:hint="@string/your_city"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/editTextContent_addEditt_UserProfile_ID"
        app:layout_constraintStart_toStartOf="@+id/editTextContent_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editTextContent_addEditt_UserProfile_ID">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_City_addEditt_UserProfile_ID_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_comment_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextContent_addEditt_UserProfile_ID"
        app:layout_constraintEnd_toStartOf="@+id/editTextContent_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editText_UserName_addEditUserProfile_ID" />

    <ImageView
        android:id="@+id/imageView_UsirProfile_inAddEdit_ID"
        android:layout_width="180dp"
        android:layout_height="176dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_place_24"
        app:layout_constraintBottom_toBottomOf="@+id/editText_City_addEditt_UserProfile_ID"
        app:layout_constraintEnd_toStartOf="@+id/editText_City_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editTextContent_addEditt_UserProfile_ID" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_person_24"
        app:layout_constraintBottom_toBottomOf="@+id/editText_UserName_addEditUserProfile_ID"
        app:layout_constraintEnd_toStartOf="@+id/editText_UserName_addEditUserProfile_ID"
        app:layout_constraintTop_toTopOf="@+id/editText_UserName_addEditUserProfile_ID" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_call_24"
        app:layout_constraintBottom_toBottomOf="@+id/editTextContact_addEditt_UserProfile_ID"
        app:layout_constraintEnd_toStartOf="@+id/editTextContact_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editText_City_addEditt_UserProfile_ID" />

    <Button
        android:id="@+id/BUTTON_ADD_UserProfile_AddEdit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:backgroundTint="#3B5336"
        android:text="@string/save"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextContact_addEditt_UserProfile_ID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextContact_addEditt_UserProfile_ID"
        app:layout_constraintTop_toBottomOf="@+id/editTextContact_addEditt_UserProfile_ID" />

</androidx.constraintlayout.widget.ConstraintLayout>
