<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="-1dp"
        android:padding="10dp">


        <ImageView
            android:id="@+id/appLogo_ID"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/img_20220104_215526" />

        <TextView
            android:id="@+id/titleTextViewNotification_ID"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_toRightOf="@+id/appLogo_ID"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_notification_ID"
            android:layout_width="287dp"
            android:layout_height="29dp"
            android:layout_below="@+id/titleTextViewNotification_ID"
            android:layout_alignParentEnd="true"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="40dp"
            android:layout_toRightOf="@+id/appLogo_ID"
            android:text="this is description"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>